alias q='exit'
alias h='history -p'
alias md='mkdir -pv'
alias rm='rm -vI'
alias mv='mv -vi'
alias cp='cp -vi'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias ls='ls --color=auto --group-directories-first'
alias l='ls -1'
alias la='ls -lhAG'               # all but . and ..
alias ll='ls -lhFG '              # long list
alias lt="ls -lhtrFG"
alias l.="ls -lhtrdFG .*"

# Power OFF or Reboot
alias reboot="sudo systemctl reboot"

